# PostgreSQL Configuration (example)
POSTGRES_USER=mmam
POSTGRES_PASSWORD=yourpassword
POSTGRES_DB=mmam

# Database Connection
DB_HOST=db
DB_PORT=5432

# FastAPI / JWT
SECRET_KEY=changeme
INIT_ADMIN=true
DISABLE_AUTH=false

# MQTT realtime settings
MQTT_ENABLED=true
MQTT_HOST=mqtt
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=mmam-api
MQTT_TOPIC_FLOW_UPDATES=mmam/flows/events
MQTT_WS_URL=ws://localhost:9001
MQTT_WS_USERNAME=
MQTT_WS_PASSWORD=
MQTT_WS_CLIENT_ID=mmam-ui

# Logging
LOG_DIR=/log
LOG_LEVEL=INFO
AUDIT_LOG_ENABLED=true
